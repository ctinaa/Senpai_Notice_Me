
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="He&apos;s not noticing"
        android:id="@+id/Notice_me"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="addButtonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_noticed"
        android:id="@+id/will_he_button"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/Notice_me"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_location_button"
        android:id="@+id/save_location"
        android:layout_below="@+id/will_he_button"
        android:layout_centerHorizontal="true"
        android:onClick="save_button_clicked" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dear "
        android:id="@+id/Dearid"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/save_location"
        android:layout_toStartOf="@+id/save_location"
        android:layout_marginTop="45dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignBottom="@+id/Dearid"
        android:layout_toRightOf="@+id/Dearid"
        android:layout_toEndOf="@+id/Dearid" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add "
        android:id="@+id/Dearnameid"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="please notice me."
        android:id="@+id/noticemetextid"
        android:layout_below="@+id/Dearnameid"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
